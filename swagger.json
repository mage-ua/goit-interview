{
  "swagger": "2.0",
  "info": {
    "description": "Books API",
    "version": "1.0.0",
    "title": "Books API",
    "contact": {
      "email": "oleg.admn@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "schemes": [
    "https"
  ],
  "host": "goit-interview.onrender.com",
  "basePath": "/api",
  "paths": {
    "/books": {
      "get": {
        "summary": "Get all the books",
        "description": "Get all the books",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "The page number",
            "type": "number",
            "default": 1
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Elements per page",
            "type": "number",
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/BooksResponse"
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      },
      "post": {
        "summary": "Save the book",
        "description": "Save the book",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "book object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/BookDetails"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Book"
            }
          },
          "400": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "summary": "Get the book",
        "description": "Get the book",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "book id that needs to be loaded",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Book"
            }
          },
          "400": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      },
      "put": {
        "summary": "Update the book",
        "description": "Update the book",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "book id that needs to be updated",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "task object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/BookDetails"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
                "$ref": "#/definitions/Book"
            }
          },
          "400": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete the book",
        "description": "Delete the book",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "book id that needs to be deleted",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
                "$ref": "#/definitions/Book"
            }
          },
          "404": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "BooksResponse": {
      "type": "object",
      "properties": {
        "books": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Book"
          }
        },
        "totalPages": {
          "type": "integer"
        }
      }
    },
    "BookDetails": {
      "type": "object",
      "required": ["title", "author"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 3,
          "maxLength":255
        },
        "author": {
          "type": "string",
          "minLength": 3,
          "maxLength":255
        }
      }
    },
    "Book": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            }
          }
        },
        {
          "$ref": "#/definitions/BookDetails"
        }
      ]
    },
    "InvalidResponse": {
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}